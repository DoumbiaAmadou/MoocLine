<?xml version="1.0" encoding="UTF-8"?>
<feuilleEx>
<exercice type="{{type}}">

	{%for quest in exercice.questions %}    
        <question>
            <text>
                {{quest.question}}
           </text>
           <tip></tip>
		   {% if type=="qcm" %}
				<answers>
					<answer good="true">
					{% for rep in quest.reponses %} 
						{% if rep.correct == true %}
							<text>  {{ rep.reponse }} </text>    
						{% endif %}
					{% endfor %}
					</answer>
					<answer good="false">
					{% for rep in quest.reponses %}
						{% if rep.correct == false %}
							<text> {{ rep.reponse }} </text>
						{% endif %}
					{% endfor %}
					</answer>
				</answers>
			{% elseif type=="qrf" %}
				<answers>
				{% for rep in quest.reponses %}
					<answer>  {{ rep.reponse }} </answer>    
				{% endfor %}
				</answers>
			{% elseif type=="p"%}
				<tests>
					<test>
						<input></input>
						<output></output>
					</test>
				</tests>
				<resources>
					<resource type="makefile"></resource>
					<resource type="filename"></resource>
				</resources>
			{% endif %}
        </question>   
	{% endfor %}

</exercice>
</feuilleEx>