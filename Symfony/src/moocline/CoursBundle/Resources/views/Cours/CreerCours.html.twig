{# On étend le layout principal #}
{% extends "::layout.html.twig" %}

{% block title %} 
  {{ parent() }} - Cours
{% endblock %}

{% block body %}
    <div class="container">
<form class="form-horizontal" action=""  method="POST" {{ form_enctype(form) }}>
  <fieldset>
      <!-- Form Name -->
<legend style="" align="center">{{ titre }}</legend>

  <div class="form-group">
  <label class="col-md-5 control-label">nom</label>  
  <div class="col-md-3">
  {{ form_widget(form.nom) }}
  </div>
</div>
  <div class="form-group">
  <label class="col-md-5 control-label">categorie</label>  
  <div class="col-md-3">
  {{ form_widget(form.categorie) }}
  </div>
</div>
  <div class="form-group">
  <label class="col-md-5 control-label">date de début</label>  
  <div class="col-md-3">
  {{ form_widget(form.date_debut) }}
  </div>
</div>
  <div class="form-group">
  <label class="col-md-5 control-label">date de fin</label>  
  <div class="col-md-3">
  {{ form_widget(form.date_fin) }}
  </div>
</div>
  
  {{ form_widget(form.presentation) }}
  
  
  {{ form_widget(form._token) }}<br>
  <div class="col-md-5">
   <input type="submit" class="btn btn-primary" value="Sauvegarder">   
  </div>

</fieldset>
</form>
    </div>
{% endblock %}
