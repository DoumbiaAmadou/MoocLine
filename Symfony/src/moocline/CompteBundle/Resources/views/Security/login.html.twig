{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %} 
   Connexion
{% endblock %}

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-error"> {{ error|trans }}</div>
{% endif %}


<fieldset style="margin-top:5%;">
	<div class="row">
  		<div class="col-md-3 col-md-offset-4"><legend>Mooc'Line Connexion</legend></div>
	</div>
	<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
   		<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		<div class="form-group">
		    <div class="col-md-3 col-md-offset-4">
		    	<p><label class="control-label" for="username">{{ 'security.login.username'|trans }}</label></p>
			    <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="pseudo ou email" class="form-control input-md" required="required" />
			    <!--<span class="help-block">obligatoire</span>-->
		    </div>
		</div>

		<div class="form-group">
		    <div class="col-md-3 col-md-offset-4">
		    	<p><label class="control-label" for="password">{{ 'security.login.password'|trans }}</label></p>
		    	<input type="password" id="password" name="_password" class="form-control input-md" placeholder="mot de passe" required="required" />
		    	<!--<span class="help-block">obligatoire</span>-->
			</div>
		</div>
		<div class="form-group" style="margin-top:3%;">
		  	<div class="col-md-3 col-md-offset-4">
				<input class="btn btn-block btn-info" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
			</div>
		</div>
		<div class="form-group" style="margin-top:3%;">
		  	<div class="col-md-3 col-md-offset-4">
			    <label class="checkbox-inline" for="remember_me">
				   	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			    	{{ 'security.login.remember_me'|trans }}
		    	</label>
		    	<span style="margin-left:7%;">
		    		<a href="{{ path('fos_user_registration_register') }}">pas encore inscrire ?</a>
		    	</span>
		    </div>
		</div>
	</form>
</fieldset>

{% endblock fos_user_content %}
