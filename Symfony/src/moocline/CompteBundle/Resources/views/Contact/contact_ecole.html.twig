{# src/moocline/CompteBundle/Resources/views/contact_ecole.html.twig #}

  {#% extends "CompteBundle::layout.html.twig" %#}
  {% extends "::layout.html.twig" %}
  {% block title %} 
    Contact Ecole & Partenaire
  {% endblock %}

  
  {% block container %}
    {# ------------------------------------ debut du formulaire --------------------------------------------#}
    <fieldset>
        <div class="row">
          <div class="col-md-4 col-md-offset-4"><legend>Ecole & Partenaire <strong>MOOC</strong>'Line</legend></div>
        </div>
        <form class="form-horizontal" {{ form_enctype(form) }} method="POST">
            {{ form_widget(form._token) }}
             <div class="form-group">
                {{ form_label(form.nomAdmin, 'Nom', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.nomAdmin, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer votre nom'}}) }}
                    {{ form_errors(form.nomAdmin) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.prenomAdmin, 'Prenom', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.prenomAdmin, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer votre prenom'}}) }}
                    {{ form_errors(form.prenomAdmin) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.nomOrganisation, 'Nom Organisation', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.nomOrganisation, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer le nom de votre organisation'}}) }}
                    {{ form_errors(form.nomOrganisation) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer votre adresse email'}}) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="form-group">
		    	{{ form_label(form.type, 'Type Organisation', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
				    {{ form_errors(form.type) }}
			    </div>
			</div>
			 <div class="form-group">
                {{ form_label(form.taille, 'Taille', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.taille, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer la taille de votre Organisation (valeur appromaxiive accept√©e)'}}) }}
                    {{ form_errors(form.taille) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.telephone, 'Telephone', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer votre telephone'}}) }}
                    {{ form_errors(form.telephone) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.sujet, 'Sujet', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.sujet, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer un sujet'}}) }}
                    {{ form_errors(form.sujet) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control input-sm','placeholder':'votre message... '}}) }}
                        {{ form_errors(form.commentaire) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.pays, 'Pays', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.pays, {'attr': {'class': 'form-control input-sm'}}) }}
                    {{ form_errors(form.pays) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.ville, 'Ville', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer votre ville'}}) }}
                    {{ form_errors(form.ville) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer votre adresse'}}) }}
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.codePostal, 'Code Postal', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
                <div class="col-md-4">
                    {{ form_widget(form.codePostal, {'attr': {'class': 'form-control input-sm','placeholder':'veuillez indiquer votre code postal'}}) }}
                    {{ form_errors(form.codePostal) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                        <input class="btn btn-block btn-success" type="submit" value="valider" />
                </div>
            </div>	
        </form>
    </fieldset>
    {# --------------------------------------- fin du formulaire -------------------------------------------#}
  {% endblock %}