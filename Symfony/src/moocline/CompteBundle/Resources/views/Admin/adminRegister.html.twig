
{% extends "mooclineCompteBundle::layout.html.twig"%}

{% block container %}

	<fieldset>		
		<div class="row">
		  <div class="col-md-4 col-md-offset-4"><legend>Mooc'Line Enseignant Inscription</legend></div>
		</div>
		<form class="form-horizontal" {{ form_enctype(form) }} method="POST">

			{{ form_widget(form._token)}}
			    
		   	<div class="form-group">
		    	{{ form_label(form.username, 'Pseudo', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.username, {'attr': {'class': 'form-control input-md'}}) }}
				    {{ form_errors(form.username) }}
			    </div>
			</div>

			<div class="form-group">
		    	{{ form_label(form.prenom, 'Prenom', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.prenom, {'attr': {'class': 'form-control input-md'}}) }}
				    {{ form_errors(form.prenom) }}
			    </div>
			</div>

			<div class="form-group">
		    	{{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.nom, {'attr': {'class': 'form-control input-md'}}) }}
				    {{ form_errors(form.nom) }}
			    </div>
			</div>

			<div class="form-group">
		    	{{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.email, {'attr': {'class': 'form-control input-md'}}) }}
				    {{ form_errors(form.email) }}
			    </div>
			</div>
		    
			<div class="form-group">
		    	{{ form_label(form.date_naissance, 'Date Naissance', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.date_naissance, {'attr': {'class': 'form-control'}}) }}
				    {{ form_errors(form.date_naissance) }}
			    </div>
			</div>

			<div class="form-group">
		    	{{ form_label(form.niveau, 'Niveau', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
				    {{ form_errors(form.niveau) }}
			    </div>
			</div>

			<div class="form-group">
		    	{{ form_label(form.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-md'}}) }}
				    {{ form_errors(form.plainPassword.first) }}
			    </div>
			</div>

			<div class="form-group">
		    	{{ form_label(form.plainPassword.second, 'Mot de passe (validation)', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-md'}}) }}
				    {{ form_errors(form.plainPassword.second) }}
			    </div>
			</div>
			<div class="form-group">
		    	{{ form_label(form.invitation, 'Code Invitation', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			    <div class="col-md-4">
			    	{{ form_widget(form.invitation, {'attr': {'class': 'form-control input-md'}}) }}
				    {{ form_errors(form.invitation) }}
			    </div>
			</div>
		    <div class="form-group">
			  	<div class="col-md-4 col-md-offset-4">
					<input class="btn btn-block btn-success" type="submit" value="Enregistrer" />
				</div>
			</div>
			{#<!--<input type="hidden" name="_target_path" value="dashboard_Enseignant" />-->#}
		</form>
	</fieldset>

{% endblock %}