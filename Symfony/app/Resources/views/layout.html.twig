<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Mooc'Line{% endblock %}</title>

    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap3/bootstrap.min.css') }}" type="text/css" />
      <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
      <link rel="stylesheet" href="{{ asset('css/fstyle.css') }}" type="text/css" />
    {% endblock %}

  </head>
  
  <body>
    
    {% block navbar %}
      <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">
              <img src="{{ asset('images/livre.jpg') }}" alt="Home" style="heigh:20px ; width : 40px">'Line
            </a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><span>         </span></li>
              <li class="active"><a href="{{ path('home') }}">Accueil</a></li>
              <li><a href="{{ path('moocline_cours_list') }}">Cours</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Institutions<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('contact_ecole_partenaire')}}">Ecole & Partenaire</a></li>
                  <li><a href="{{ path('inscription_Enseignant')}}">Inscription Enseignant</a></li>
                  {#<!--<li><a href="{{ path('inscription_Enseignant')}}">Inscription Admin Ecole</a></li>
                  <li><a href="{{ path('')}}">  </a></li>-->#}
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Contact<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <!--<li><a href="{{ path('contact_ecole_partenaire')}}">Ecole & Partenaire</a></li>-->
                  <li><a href="{{ path('contact_particulier')}}">Nous écrire</a></li>
                  <li><a href="{{ path('qui_sommes_nous')}}">Qui sommes nous</a></li>
                </ul>
              </li>
              <li>
               <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Search">
                </div>
               </form>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a><span style=​"margin:​3px -5px 0px 2px;​​">​|​</span></a></li>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
              <li class="dropdown">
                <a href="{{ path('home') }}" class="dropdown-toggle" data-toggle="dropdown">
                  {{ app.user.username }}
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="{{ path('dashboard_Etudiant', { 'id' : app.user.id}) }}">Tableau de bord</a></li>
                  <li><a href="{{ path('vue_Etudiant', { 'id' : app.user.id}) }}">Profil</a></li>
                  <li><a href="{{ path('modification_Etudiant', { 'id' : app.user.id}) }}">Edition Profil</a></li>
                </ul>
              </li>
                <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
            {% else %}
              <li><a href="{{ path('fos_user_security_login') }}">Connexion</a></li>
              <li><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></li>
            {% endif %}
            </ul> 
          </div><!--/.nav-collapse -->
        </div>
      </div>
    {% endblock %}

    {% block body %}
       
      {% block container %}
    
      {% endblock container %}

    {% endblock %}
 
    <footer style="margin-top:5%;">
      <center><p>
        <strong>MOOC</strong>'Line © 2014 and <strong>Mooc</strong>'Line Team at Université Paris Diderot (<strong>UPD-7</strong>).
      </p></center>
    </footer>

    {% block javascripts %}
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
      <script type="text/javascript" src="{{ asset('js/bootstrap3/bootstrap.min.js') }}"></script>
    {% endblock %}

  </body>
</html>